			    var info = [dob, weight, age, sex, ethnicity, race, hPhone, wPhopn, firstLan, contact,
                      pharmacyName, insuranceName, insuranceID, recordNum]
			    var ele = ['DOB', 'weight', 'age', 'sex', 'ethnicity', 'race', 'hPhone', 'wPhone', 'firstLan','contact',
                      'pharmacy','insuranceName', 'insuranceID', 'recordNum']
			    var i = 0
			    ele.forEach(element => {
			        var patientName = document.getElementById(element)
			        patientName.insertAdjacentHTML('beforeend', '<strong>' + info[i] + '</strong>')
			        i++
			    });
			    var pName = document.getElementById('pName')
          pName.insertAdjacentHTML('beforeend', name)
